{
  "name": "tree-sitter-arizona",
  "version": "0.1.0",
  "description": "Tree-sitter parser for Arizona language (.herl files) - HTML with embedded Erlang code",
  "scripts": {
    "build": "tree-sitter generate",
    "build:wasm": "tree-sitter build --wasm",
    "test": "tree-sitter test",
    "test:update": "tree-sitter test --update",
    "test:debug": "tree-sitter test --debug",
    "parse": "tree-sitter parse",
    "playground": "npm run build:wasm && tree-sitter playground",
    "validate": "npm run build && npm run test"
  },
  "keywords": [
    "tree-sitter",
    "parser",
    "arizona",
    "herl",
    "erlang",
    "html"
  ],
  "author": "William Fank ThomÃ© <will@iamtho.me>",
  "license": "Apache-2.0",
  "devDependencies": {
    "tree-sitter-cli": "^0.25.8"
  }
}
